{
   "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jquery": true,
      "mocha": true,
      "node": true,
      "serviceworker": true,
      "worker": true
   },
   "extends": [
      "airbnb-base"
   ],
   "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
   },
   "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
   },
   "rules": {
      "indent": [
         "warn",
         4
      ],
      "linebreak-style": [
         "error",
         "unix"
      ],
      "quotes": [
         "error",
         "single"
      ],
      "semi": [
         "error",
         "always"
      ],
      "no-console": 1,
      "comma-dangle": [
         0
      ],
      "arrow-parens": [
         0
      ],
      "object-curly-spacing": [
         "warn",
         "always"
      ],
      "array-bracket-spacing": [
         "warn",
         "always"
      ],
      "import/prefer-default-export": [
         0
      ]
   }
}
